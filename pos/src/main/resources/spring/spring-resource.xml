	<!-- <tx:method name="create*" propagation="REQUIRED" /> -->
	<!-- <tx:method name="update*" propagation="REQUIRED" /> -->
	<!-- <tx:method name="del*" propagation="REQUIRED" /> -->
	<!-- <tx:method name="force*" propagation="REQUIRED" /> -->
	<!-- <tx:method name="*" read-only="true" /> -->
	<!-- </tx:attributes> -->
	<!-- </tx:advice> -->
	<!-- JDBCTemplates配置开始 -->

	<!-- <bean id="posJT" class="org.springframework.jdbc.core.JdbcTemplate"> -->
	<!-- <property name="dataSource" ref="posDataSource"></property> -->
	<!-- </bean> -->
	<!-- JDBCTemplates配置结束 -->



	<!-- mybatis文件配置，扫描所有mapper文件 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"
		p:dataSource-ref="dataSource" p:configLocation="classpath:conf/mybatis-config.xml" />
	<!-- configLocation为mybatis属性 mapperLocations为所有mapper -->

	<!-- spring与mybatis整合配置，扫描所有dao -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer"
		p:basePackage="com.pos.dao" p:sqlSessionFactoryBeanName="sqlSessionFactory" />

	<!-- 对数据源进行事务管理 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource" />
</beans>